<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/lookBlog"
                android:onClick="lookBlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:drawableTop="@drawable/diary4"
                android:gravity="center"
                android:text="博客"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/editBlog"
                android:onClick="editBlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:drawableTop="@drawable/diary6"
                android:gravity="center"
                android:text="博客后台"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:id="@+id/diary"
                android:onClick="diary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:drawableTop="@drawable/diary"
                android:gravity="center"
                android:text="日记"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_below="@id/lookBlog"/>
            <TextView
                android:id="@+id/joke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:drawableTop="@drawable/diary2"
                android:gravity="center"
                android:text="段子"
                android:onClick="joke"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/editBlog"
                 />
            <TextView
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:drawableTop="@drawable/diary3"
                android:gravity="center"
                android:text="历史上的今天"
                android:onClick="history"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_below="@id/diary"
                 />
